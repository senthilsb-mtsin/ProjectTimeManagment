@model TimeManagement.Models.Login                
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script type="text/javascript">
    $(document).ready(function () {
        //Focus
        $('#userName').focus();
    });
</script>
@using (Html.BeginForm("AuthenticateUser", "Home", FormMethod.Post, new { @class = "form-inline", id = "loginForm" }))
{
    <div class="login_box clearfix">
        <div class="top_b">
            Login</div>
        <div class="cnt_b">
            <div class="row">
                <div class="col-lg-10 gap-left25 pad-left20">
                    <div class="col-lg-12 gap-bottom5">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa-user"></i></span>
                            @Html.TextBoxFor(m => m.UserId, new { @class = "required form-control", id = "userName", name = "userName" })
                        </div>
                        <div class="gap-top5">@Html.ValidationMessageFor(m => m.UserId)</div>
                    </div>
                    <div class="col-lg-12 gap-bottom5">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa-lock"></i></span>
                            @Html.PasswordFor(m => m.Password, new { @class = "required form-control", id = "password", name = "password" })
                        </div>
                        <div class="gap-top5">@Html.ValidationMessageFor(m => m.Password)</div>
                    </div>
                    <div class="col-lg-12 gap-bottom5">
                        @{
    if (TempData["success"] != null)
    {
                            <div class="requi">
                                @Html.Encode(TempData["success"])
                            </div>
    }

    if (TempData["error"] != null)
    {
                            <div class="requi">
                                @Html.Encode(TempData["error"])
                            </div>
    }
                        }
                    </div>
                </div>
            </div>
        </div>
        <div class="btm_b clearfix">
            <button class="btn btn-primary pull-right" type="submit" id="btnSignIn">
                Sign In</button>
        </div>
    </div>
    
