<script type="text/javascript">

    var oTable;
    function showexport() {
        $("#exporttoCSV").show();
    }
    function datevalidate() {
        var fromdate = $('#fromdate').val();
        var todate = $('#todate').val();

        if ((Date.parse(fromdate) > Date.parse(todate))) {
            alert("To Date should be greater than From date.");
            document.getElementById("todate").value = "";
            return false;
        }

        return true;

    }

    $(document).ready(function () {
        $("#exporttoCSV").hide();
        $("#exporttoCSV").click(function () {
            var from_date = $('#fromdate').val();
            var to_date = $('#todate').val();
            var loc = $('#location').val();
            //var url = '@Url.Action("ExportToCSVCategory", "Report",new{fromdate="fd",todate="td",location="lc"})';
            //location.href = url.replace('fd', from_date).replace('td', to_date).replace('lc', loc);
            window.location.href = '../Report/ExportToCSVCategory?fromdate=' + from_date + '&todate=' + to_date + '&location=' + loc;
        });
        $("#fromdate").change(function () {
            var fromdate = $('#fromdate').val();
            if (fromdate == "") {
                $('#fdate').removeClass('hidden');
                return false;
            } else if (fromdate != "") {
                $('#fdate').addClass('hidden');
                return false;
            }
            return true;

        });
        $("#todate").change(function () {
            var todate = $('#todate').val();
            if (todate == "") {
                $('#tdate').removeClass('hidden');
                return false;
            } else if (todate != "") {
                $('#tdate').addClass('hidden');
                return false;
            }
            return true;
        });

        $('#location').select2({
            sorter: LocationId => LocationId.sort((a, b) => a.text.localeCompare(b.text)),           
            placeholder: "Select Location",
        });

    });

    function checkdate() {
        var fromdate = $('#fromdate').val();
        var todate = $('#todate').val();
        if ((fromdate == "") && (todate == "")) {
            $('#fdate').removeClass('hidden');
            $('#tdate').removeClass('hidden');
            $("#tablediv").html(' ');
            $("#exporttoCSV").hide();
            return false;
        } else if ((fromdate != "") && (todate == "")) {
            $('#fdate').addClass('hidden');
            $('#tdate').removeClass('hidden');
            $("#tablediv").html(' ');
            $("#exporttoCSV").hide();
            return false;
        } else if ((fromdate == "") && (todate != "")) {
            $('#fdate').removeClass('hidden');
            $('#tdate').addClass('hidden');
            $("#tablediv").html(' ');
            $("#exporttoCSV").hide();
            return false;
        }
        if (datevalidate() == false) {
            $("#tablediv").html(' ');
            $("#exporttoCSV").hide();
            return false;
        }
        else {
            $("#tablediv").html(' ');
            $("#exporttoCSV").hide();
            $.ajax({
                type: 'POST',
                url: '@Url.Content("~/Report/CategoryWiseReport")',
                data: { fromdate: $("#fromdate").val(), todate: $("#todate").val(), LocationId: $("#location").val() },
                success: function (data) {
                    $("#tablediv").html(data);
                },
                cache: false

            });

        }

    }


</script>
