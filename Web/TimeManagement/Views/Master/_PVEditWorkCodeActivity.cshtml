@model TimeManagement.Models.WorkCodesActivity
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<script type="text/javascript">
    $(document).ready(function () {

        $("#worknum").attr("disabled", "disabled");

        $(".datePicker").datepicker();

    });
</script>

@using (Html.BeginForm("/EditWorkCodeActivity", "Master", FormMethod.Post, new { id = "WorkCodeUpdateForm" }))
{
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true">&times;</span><span class="sr-only">Close</span>
                </button>
                <h4 class="modal-title">
                    Edit Work Code Activity
                </h4>
            </div>
            @Html.HiddenFor(m => m.Id)
            <div class="modal-body">
                <div class="row">
                    <div class="col-lg-12">

                        <div class="col-lg-12 gap-bottom5">
                            <div class="col-lg-5 gap-top5 text-right">
                                <b>Work Code Activity Name</b>
                            </div>
                            <div class="col-lg-7">
                                @Html.TextBoxFor(m => m.Name, new { @class = "required  form-control", maxlength = "70" })
                                <div>&nbsp</div>
                                <div>@Html.ValidationMessageFor(m => m.Name)</div>
                            </div>
                        </div>
                        <div class="col-lg-12 gap-bottom5">
                            <div class="col-lg-5 gap-top5 text-right">
                                <b>Work Code Number</b>
                            </div>
                            <div class="col-lg-7">
                                @Html.TextBoxFor(m => m.Number, new { @class = "required  form-control ", onkeypress = "return isNumber(event)", id = "worknum" })
                                @Html.HiddenFor(m => m.Number)
                                <div>&nbsp</div>
                                <div>@Html.ValidationMessageFor(m => m.Number)</div>
                            </div>
                        </div>
                        <div class="col-lg-12 gap-bottom5">
                            <div class="col-lg-5 gap-top5 text-right">
                                <b>Billable</b>
                            </div>
                            <div class="col-lg-7 gap-top5">
                                @Html.CheckBoxFor(m => m.Billable)
                                <div>&nbsp</div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="modal-footer clear">
                <button type="submit" class="btn btn-info pull-right gap-right10">
                    Update
                </button>
                <button type="button" data-dismiss="modal" class="btn btn-info pull-right gap-right10">
                    Close
                </button>
            </div>
        </div>
    </div>
  
}
