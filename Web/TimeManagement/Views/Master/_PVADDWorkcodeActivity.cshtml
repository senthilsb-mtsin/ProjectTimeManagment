@model TimeManagement.Models.WorkCodeActivity
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script type="text/javascript">

    $(document).ready(function () {
        $("#worknum").attr("disabled", "disabled");
    });

    function isNumber(evt) {
        evt = (evt) ? evt : window.event;
        var charCode = (evt.which) ? evt.which : evt.keyCode;
        if (charCode > 31 && (charCode < 48 || charCode > 57)) {
            return false;
        }
        return true;
    }
</script>
@using (Html.BeginForm("/AddWorkCodeActivity", "Master", FormMethod.Post, new { id = "WorkCodeAddForm" }))
{
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true">&times;</span><span class="sr-only">Close</span>
                </button>
                <h4 class="modal-title">
                    Add New Work Code Activity
                </h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="col-lg-12 gap-bottom5">
                            <div class="col-lg-4 gap-top5 text-right">
                                <b>Work Code Activity Name</b>
                            </div>
                            <div class="col-lg-7">
                                @Html.TextBoxFor(m => m.Name, new { @class = "required  form-control", maxlength = "70" })
                                <div>
                                    &nbsp
                                </div>
                                <div>@Html.ValidationMessageFor(m => m.Name)</div>
                            </div>
                        </div>
                        <div class="col-lg-12 gap-bottom5">
                            <div class="col-lg-4 gap-top5 text-right">
                                <b> Number</b>
                            </div>
                            <div class="col-lg-7">
                                @Html.TextBoxFor(m => m.Number, new { @class = "form-control ", onkeypress = "return isNumber(event)", id = "worknum" })
                                @Html.HiddenFor(m => m.Number)
                                <div>
                                    &nbsp
                                </div>
                                <div>@Html.ValidationMessageFor(m => m.Number)</div>
                            </div>
                        </div>
                        <div class="col-lg-12 gap-bottom5">
                            <div class="col-lg-4 gap-top5 text-right">
                                <b>Billable</b>
                            </div>
                            <div class="col-lg-7 gap-top5">
                                @Html.CheckBoxFor(m => m.Billable)
                                <div>
                                    &nbsp
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer clear">
                <button type="submit" class="btn btn-info pull-right gap-right10">
                    Add
                </button>
                <button type="button" data-dismiss="modal" class="btn btn-info pull-right gap-right10">
                    Close
                </button>
            </div>
        </div>
    </div>

}







